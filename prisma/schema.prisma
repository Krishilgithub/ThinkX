// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  avatar    String?
  bio       String?
  role      String   @default("TEACHER") // TEACHER, STUDENT
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  courses       Course[]      @relation("CreatedCourses")
  enrollments   Enrollment[]
  notifications Notification[]
  settings      Settings?
}

model Settings {
  id              String  @id @default(uuid())
  userId          String  @unique
  user            User    @relation(fields: [userId], references: [id])
  emailNotify     Boolean @default(true)
  studentNotify   Boolean @default(true)
  marketingNotify Boolean @default(false)
}

model Course {
  id          String   @id @default(uuid())
  title       String
  description String?  @db.Text
  thumbnail   String?
  price       Float    @default(0.0)
  status      String   @default("DRAFT") // DRAFT, PUBLISHED, ARCHIVED
  visibility  String   @default("PUBLIC") // PUBLIC, PRIVATE
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  userId      String
  user        User     @relation("CreatedCourses", fields: [userId], references: [id])
  
  chapters    Chapter[]
  enrollments Enrollment[]
  analytics   CourseAnalytics?
}

model Chapter {
  id          String   @id @default(uuid())
  title       String
  orderIndex  Int      @default(0)
  status      String   @default("DRAFT") // DRAFT, PUBLISHED
  
  courseId    String
  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  videos      Video[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Video {
  id          String   @id @default(uuid())
  title       String   // Renamed from 'topic' to title for consistency, can serve as topic
  script      String?  @db.Text
  videoUrl    String?
  duration    Float?   // Duration in seconds
  status      String   @default("DRAFT") // DRAFT, PROCESSING, READY
  
  chapterId   String
  chapter     Chapter  @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  
  analytics   VideoAnalytics?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Enrollment {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  courseId  String
  course    Course   @relation(fields: [courseId], references: [id])
  
  progress  Float    @default(0.0) // 0 to 100
  joinedAt  DateTime @default(now())

  @@unique([userId, courseId])
}

model CourseAnalytics {
  id             String @id @default(uuid())
  courseId       String @unique
  course         Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  totalViews     Int    @default(0)
  totalRevenue   Float  @default(0.0)
  completionRate Float  @default(0.0)
}

model VideoAnalytics {
  id             String @id @default(uuid())
  videoId        String @unique
  video          Video  @relation(fields: [videoId], references: [id], onDelete: Cascade)
  
  views          Int    @default(0)
  retentionChart Json?  // Stores retention graph data
}

model Resource {
  id        String   @id @default(uuid())
  name      String
  type      String   // PDF, Image, Link, Doc
  url       String
  size      String?
  date      DateTime @default(now())
  
  // Resources could be linked to a Course or User generally
  userId    String? 
  // user      User?    @relation(fields: [userId], references: [id]) // Optional link to owner
}

model Notification {
  id        String   @id @default(uuid())
  title     String
  message   String
  read      Boolean  @default(false)
  date      DateTime @default(now())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}
